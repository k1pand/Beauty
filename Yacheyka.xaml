<UserControl x:Class="Beauty.Yacheyka"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Beauty"
             mc:Ignorable="d" 
            Height="200" Width="200">
    <Grid Background="White" >
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200"/>
        <Image x:Name="photo" HorizontalAlignment="Left" Height="100" Margin="53,20,0,0" VerticalAlignment="Top" Width="100" Source="ava.png"/>
        <TextBlock x:Name="name" HorizontalAlignment="Left" Margin="38,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44"><Run Text="Наименование товара"/><LineBreak/><Run/></TextBlock>
        <Label x:Name="price" Content="1500 рублей" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top"/>


    </Grid>
</UserControl>
