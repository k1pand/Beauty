<Window x:Class="Beauty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beauty"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,0,161,0">
            <WrapPanel x:Name="list" Loaded="list_Loaded" />
        </ScrollViewer>
        <TextBox x:Name="search" HorizontalAlignment="Left" Height="23" Margin="646,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="search_TextChanged"/>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="646,78,0,0" VerticalAlignment="Top"/>
        <Button x:Name="add" Content="Добавить" HorizontalAlignment="Left" Margin="664,227,0,0" VerticalAlignment="Top" Width="76" Click="add_Click"/>

    </Grid>

</Window>
